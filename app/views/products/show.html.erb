<h1> <%= @product.name%></h1>





<%= @product.images.attached? ? (image_tag @product.images.first,  alt:'Image of Bat') : (image_tag 'BAT.jpg', alt:'Default image of Bat') %>

 <ul>
 <li> <h5> Description: <%= @product.description %> </h5> </li>
 <li><h5> price: $<%= @product.price%></h4> </li>
 
 </ul>
 
 
 <ul>

 <div>
  <%= link_to "edit", edit_product_path(@product),class:"btn btn-success" %> 
    <div class="edit-box"> 
    </div>
 </div>
  
  
  <%= button_to 'DESTROY', @product, method: :delete,
        data: { confirm: "Are you sure?" }, class:"btn btn-danger m-1" %> 
          <%= button_tag "Purchase for #{number_to_currency(@product.price )}",data: {stripe:'payment', session_id: @session_id, public_key: Rails.application.credentials.dig(:stripe, :public_key)},class:"btn btn-outline-success" %>


        </ul>


<% @product.ratings.each do |rating|%>
<h5><%= rating.user.name%></h5>
<p>Review: <%= rating.review%> </p>
<p>Rating: <%= rating.rating%>  </p>


<%end%>


